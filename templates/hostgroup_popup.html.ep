% title 'Hostgroup popup';
% layout 'popup';
% my $hostgroup = $c->stash('hostgroup');
<A href="/hostgroup/details?id=<%= $hostgroup->{'id'} %>"><%= $hostgroup->{'name'} %></A><BR>
<HR>
<A href="javascript:begin_drag_object('hostgroup<%= $hostgroup->{'id'} %>')">Move...</A><BR>
<HR>
% foreach my $host (@{$c->stash('hosts')}) {
<A href="/host/details?id=<%= $host->{'id'} %>"><%= $host->{'name'} %></A><BR>
% }

