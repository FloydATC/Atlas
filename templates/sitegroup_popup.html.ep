% title 'Sitegroup popup';
% layout 'popup';
% my $id = $c->param('id');
% my $sitegroup = atlas_sitegroup_get(dbh, $id);
<%== atlas_sitegroup_link(dbh, $sitegroup->{'id'}) %><BR>
<HR>
<A href="javascript:begin_drag_object('sitegroup<%= $sitegroup->{'id'} %>')">Move...</A><BR>
<HR>
% foreach my $site (atlas_sitegroup_sites(dbh, $id)) {
<%== atlas_site_link(dbh, $site->{'id'}) %><BR>
% }


